<%= render :partial => "slider" %>

<% @infos.each do |info| %>
  <h2><%= link_to info.title, stable_infos_show_url(info) %></h2>
  <p><%= info.created_at.strftime("%d-%m-%Y %H:%M:%S") %></p>
  <div class="news-image">
    <%= image_tag(info.image.small.url) if info.image.present? %><br>
  </div>
  <div class="akt-text">
    <%= raw info.content %>
   </div>
  <div class="clearspace"></div>
<% end %>
